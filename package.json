{
  "name": "suit-up",
  "version": "0.3.0",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/schiehll/suit-up.git"
  },
  "keywords": [
    "react",
    "css",
    "css-in-js",
    "CSS Modules"
  ],
  "author": "schiehll <rn.schiehll@gmail.com> (http://github.com/schiehll)",
  "license": "MIT",
  "scripts": {
    "test": "standard && jest",
    "lint": "standard --fix",
    "test:watch": "jest --watch --coverage",
    "test:cover": "jest --coverage",
    "precommit": "npm test",
    "commit": "git cz",
    "build": "babel src --out-dir lib --ignore *.spec.js",
    "demo": "webpack --config ./demo/webpack.config.babel.js",
    "demo:watch": "webpack --watch --config ./demo/webpack.config.babel.js"
  },
  "dependencies": {
    "css-selector-tokenizer": "^0.7.0",
    "icss-replace-symbols": "^1.0.2",
    "insert-css": "^1.0.0",
    "mem": "^1.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.0",
    "babel-jest": "^16.0.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.18.0",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "enzyme": "^2.5.1",
    "enzyme-to-json": "^1.1.5",
    "husky": "^0.11.9",
    "jest-cli": "^16.0.2",
    "json-loader": "^0.5.4",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "standard": "^8.5.0",
    "webpack": "^1.13.3"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "beforeEach",
      "test",
      "expect"
    ],
    "ignore": [
      "lib",
      "**/*/*.spec.js",
      "demo/js"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/vendor/"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
